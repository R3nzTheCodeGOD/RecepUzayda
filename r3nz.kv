#:import menu menu
MainWidget:
<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/back.png'
    menu_widget: menu_widget
    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75
    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_text
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        size_hint: 0, .235
        pos_hint: {"x": .12, "top": 1}
        color: 1, 1, .10, 1
    Label:
        text: root.best_score_text
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        size_hint: 0, .15
        pos_hint: {"x": .12, "top": 1}
        color: .10, 1, .10, 1